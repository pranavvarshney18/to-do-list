

<div>
    <!-- heading  -->
    <h1>TODO List</h1>

    <!-- form  -->
    <div>
        <form action="/create-todo" method="POST">
            <div>
                Description
                <input type="text" name="description" placeholder="What do you need to do?" required>
            </div>
            <span>
                Category
                <select name="category" id="category" placeholder="Choose a category">
                    <option value="Personal">Personal</option>
                    <option value="Work">Work</option>
                    <option value="School">School</option>
                    <option value="Cleaning">Cleaning</option>
                    <option value="Other">Other</option>
                </select>
            </span>
            <span>
                Due Date
                <input type="date" name="date" placeholder="yyyy/mm/dd" value="NO DEADLINE">
            </span>

            <div>
                <button type="submit">+ ADD</button>
            </div>

        </form> 
    </div>

    <span>
        <a href="/delete-todo/">
            <button type="submit">- DELETE</button>
        </a>
    </span>

    <!-- database  -->
    <div>
        
            <ul type="none">
                <% for(let i of todo_list){ %>
                    <li>
                        <p> <%= i.description %> </p>
                        <p> <%= i.date %> </p>
                        <p> <%= i.category %> </p>
                        <p>
                            <a href="/mark-for-delete/?id=<%= i._id %>">
                                <button type="submit" style="height:15px; width:10px;"></button>
                            </a>
                        </p>
                    </li>
                <% } %>
            </ul>
    </div>
</div>